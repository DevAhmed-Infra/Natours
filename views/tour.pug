extends base
include _reviewCard

block append head
  script(src='https://api.mapbox.com/mapbox-gl-js/v0.54.0/mapbox-gl.js')
  link(href='https://api.mapbox.com/mapbox-gl-js/v0.54.0/mapbox-gl.css' rel='stylesheet')

mixin overviewBox(label, text, icon)
  .overview-box__detail
    svg.overview-box__icon
      use(xlink:href=`/img/icons.svg#icon-${icon}`)
    span.overview-box__label= label
    span.overview-box__text= text

block content
  if !tour
    .error-message
      h1 Tour not found
      p The tour you're looking for doesn't exist.
  else
    section.section-header
      .header__hero
        .header__hero-overlay &nbsp;
        img.header__hero-img(src=`/img/tours/${tour.imageCover || 'default.jpg'}`, alt=`${tour.name || 'Tour'}`)

      .heading-box
        h1.heading-primary
          span= `${tour.name || 'Tour'} tour`
        .heading-box__group
          .heading-box__detail
            svg.heading-box__icon
              use(xlink:href='/img/icons.svg#icon-clock')
            span.heading-box__text= `${tour.duration || 0} days`
          .heading-box__detail
            svg.heading-box__icon
              use(xlink:href='/img/icons.svg#icon-map-pin')
            span.heading-box__text= (tour.startLocation && tour.startLocation.description) || 'Location TBA'

    section.section-description
      .overview-box
        div
          .overview-box__group
            h2.heading-secondary.ma-bt-lg Quick facts

            - const date = (tour.startDates && tour.startDates.length > 0) ? tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'}) : 'Date TBA'
            +overviewBox('Next date', date, 'calendar')
            +overviewBox('Difficulty', tour.difficulty || 'N/A', 'trending-up')
            +overviewBox('Participants', `${tour.maxGroupSize || 0} people`, 'user')
            +overviewBox('Rating', `${tour.ratingsAverage || 0} / 5`, 'star')

        .overview-box__group
          h2.heading-secondary.ma-bt-lg Your tour guides

          if tour.guides && tour.guides.length > 0
            each guide in tour.guides
              .overview-box__detail
                img.overview-box__img(src=`/img/users/${guide.photo || 'default.jpg'}`, alt=`${guide.name || 'Guide'}`)

                - if (guide.role === 'lead-guide')
                  span.overview-box__label Lead guide
                - else if (guide.role === 'guide')
                  span.overview-box__label Tour guide
                span.overview-box__text= guide.name || 'Guide'
          else
            p.overview-box__text No guides available for this tour.

    .description-box
      h2.heading-secondary.ma-bt-lg= `About ${tour.name || 'this'} tour`
      if tour.description
        - const parapraphs = tour.description.split('\n');
        each p in parapraphs
          p.description__text= p
      else
        p.description__text No description available for this tour.

  section.section-pictures
    if tour.images && tour.images.length > 0
      each img, i in tour.images
        .picture-box
          img.picture-box__img(src=`/img/tours/${img || 'default.jpg'}`, alt=`Tour image ${i + 1}`, class=`picture-box__img--${i + 1}`)
    else
      p No images available for this tour.

  section.section-map
    if tour.locations && tour.locations.length > 0
      #map(data-locations=`${JSON.stringify(tour.locations)}`)
    else
      p No map available for this tour.

  section.section-reviews
    .reviews
      if tour.reviews && tour.reviews.length > 0
        each review in tour.reviews
          +reviewCard(review)
      else
        p No reviews available for this tour.

  section.section-cta
    .cta
      .cta__img.cta__img--logo
        img(src='/img/logo-white.png', alt='Natours logo')
      if tour.images && tour.images.length > 1
        img.cta__img.cta__img--1(src=`/img/tours/${tour.images[1]}`, alt='Tour picture')
      if tour.images && tour.images.length > 2
        img.cta__img.cta__img--2(src=`/img/tours/${tour.images[2]}`, alt='Tour picture')
      .cta__content
        h2.heading-secondary What are you waiting for?
        p.cta__text= `${tour.duration || 0} days. 1 adventure. Infinite memories. Make it yours today!`
        button.btn.btn--green.span-all-rows Book tour now!